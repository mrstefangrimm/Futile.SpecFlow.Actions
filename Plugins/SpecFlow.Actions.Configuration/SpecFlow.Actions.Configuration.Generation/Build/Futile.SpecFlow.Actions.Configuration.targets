<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<BuildDependsOn>
			CopySpecFlowActionJsonToOutput;
			$(BuildDependsOn)
		</BuildDependsOn>
		<CleanDependsOn>
			$(CleanDependsOn)
		</CleanDependsOn>
		<RebuildDependsOn>
			CopySpecFlowActionJsonToOutput;
			$(RebuildDependsOn)
		</RebuildDependsOn>
	</PropertyGroup>

	<Target Name="CopySpecFlowActionJsonToOutput" >
		<PropertyGroup>
			<SpecFlowActionJson>specflow.actions.json</SpecFlowActionJson>
		</PropertyGroup>

		<ItemGroup Condition="Exists($(SpecFlowActionJson))">
			<None Include="specflow.actions.json" CopyToOutputDirectory="Always" />
			<None Include="specflow.actions.*.json" CopyToOutputDirectory="Always" />
		</ItemGroup>
	</Target>

	<PropertyGroup>
		<_SpecFlowActionsConfigurationGeneratorPluginFramework Condition=" '$(MSBuildRuntimeType)' == 'Core'">netcoreapp2.1</_SpecFlowActionsConfigurationGeneratorPluginFramework>
		<_SpecFlowActionsConfigurationGeneratorPluginFramework Condition=" '$(MSBuildRuntimeType)' != 'Core'">net471</_SpecFlowActionsConfigurationGeneratorPluginFramework>
		<_SpecFlowActionsConfigurationGeneratorPluginPath>$(MSBuildThisFileDirectory)\$(_SpecFlowActionsConfigurationGeneratorPluginFramework)\SpecFlow.Actions.Configuration.Generation.SpecFlowPlugin.dll</_SpecFlowActionsConfigurationGeneratorPluginPath>

		<_SpecFlowActionsConfigurationRuntimePluginFramework Condition=" '$(TargetFrameworkIdentifier)' == '.NETCoreApp' ">netcoreapp2.1</_SpecFlowActionsConfigurationRuntimePluginFramework>
		<_SpecFlowActionsConfigurationRuntimePluginFramework Condition=" '$(TargetFrameworkIdentifier)' == '.NETFramework' ">net471</_SpecFlowActionsConfigurationRuntimePluginFramework>
		<_SpecFlowActionsConfigurationRuntimePluginPath>$(MSBuildThisFileDirectory)\..\lib\$(_SpecFlowActionsConfigurationRuntimePluginFramework)\SpecFlow.Actions.Configuration.SpecFlowPlugin.dll</_SpecFlowActionsConfigurationRuntimePluginPath>
	

</PropertyGroup>
</Project>
